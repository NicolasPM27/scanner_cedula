# ── API ──────────────────────────────────────────────────
PORT=3000
NODE_ENV=production

# ── Database (contenedor fomag-sqlserver) ────────────────
DB_HOST=fomag-sqlserver
DB_PORT=1433
DB_USER=sa
DB_PASSWORD=
DB_NAME=fomag_db
DB_ENCRYPT=false
DB_TRUST_SERVER_CERTIFICATE=true

# ── CORS ─────────────────────────────────────────────────
CORS_ORIGIN=http://localhost
# Patrones regex opcionales (separados por coma), útil para túneles:
# CORS_ORIGIN_REGEX=^https://.*\\.ngrok-free\\.dev$,^https://.*\\.trycloudflare\\.com$
CORS_ORIGIN_REGEX=

# ── Auth Microsoft Entra ID ──────────────────────────────
AZURE_ENABLED=true
AZURE_TENANT_ID=
AZURE_CLIENT_ID=

# ── Docker Compose ───────────────────────────────────────
FRONTEND_PORT=80
API_PORT=3000
